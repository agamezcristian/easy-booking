{
  "databaseChangeLog": [
    {
      "changeSet": {
        "id": "create-conversation-sessions-table",
        "author": "Cristian",
        "changes": [
          {
            "createTable": {
              "tableName": "conversation_sessions",
              "columns": [
                {
                  "column": {
                    "name": "id",
                    "type": "VARCHAR(32)",
                    "constraints": {
                      "nullable": false,
                      "primaryKey": true,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "conversacion_id",
                    "type": "VARCHAR(32)",
                    "constraints": {
                      "nullable": false,
                      "unique": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "current_step",
                    "type": "VARCHAR(100)",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "last_activity",
                    "type": "TIMESTAMP",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "created_at",
                    "type": "TIMESTAMP",
                    "constraints": {
                      "nullable": false,
                      "updatable": false
                    },
                    "defaultValueComputed": "CURRENT_TIMESTAMP"
                  }
                },
                {
                  "column": {
                    "name": "updated_at",
                    "type": "TIMESTAMP",
                    "constraints": {
                      "nullable": true
                    }
                  }
                },
                {
                  "column": {
                    "name": "created_by",
                    "type": "VARCHAR(50)",
                    "constraints": {
                      "nullable": true,
                      "updatable": false
                    }
                  }
                },
                {
                  "column": {
                    "name": "last_modified_by",
                    "type": "VARCHAR(50)",
                    "constraints": {
                      "nullable": true
                    }
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {
      "changeSet": {
        "id": "add-foreign-keys",
        "author": "Cristian",
        "changes": [
          {
            "addForeignKeyConstraint": {
              "baseTableName": "conversation_sessions",
              "baseColumnNames": "conversacion_id",
              "constraintName": "fk_conversation_sessions_conversation",
              "referencedTableName": "conversation",
              "referencedColumnNames": "id",
              "onDelete": "CASCADE",
              "onUpdate": "CASCADE"
            }
          }
        ]
      }
    },
    {
      "changeSet": {
        "id": "add-indexes",
