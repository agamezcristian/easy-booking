              "tableName": "whatsapp_configuration",
              "columns": [
                {
                  "column": {
                    "name": "conversacion_id"
                  }
                }
              ]
            }
          },
          {
            "createIndex": {
              "indexName": "idx_conversation_sessions_current_step",
              "tableName": "whatsapp_configuration",
              "columns": [
                {
                  "column": {
                    "name": "current_step"
                  }
                }
              ]
            }
          }
        ]
      }
    }
  ]
}